# ========================================
# STREAMVAULT BRASIL - CONFIGURAÇÕES
# ========================================

# Ambiente
NODE_ENV=development
PORT=3000

# URLs do sistema
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001
CDN_URL=https://cdn.streamvault.com.br

# ========================================
# BANCO DE DADOS
# ========================================

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/streamvault-brasil?retryWrites=true&w=majority

# Redis (Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========================================
# AUTENTICAÇÃO E SEGURANÇA
# ========================================

# JWT
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_128_caracteres_minimo
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session
SESSION_SECRET=sua_chave_session_super_secreta_aqui

# Criptografia
ENCRYPTION_KEY=sua_chave_criptografia_32_caracteres

# ========================================
# TMDB API (OBRIGATÓRIO)
# ========================================
# Obter em: https://www.themoviedb.org/settings/api
TMDB_API_KEY=sua_chave_tmdb_aqui

# ========================================
# PAGAMENTOS BRASILEIROS
# ========================================

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=TEST-sua_chave_mercado_pago_aqui
MERCADO_PAGO_PUBLIC_KEY=TEST-sua_chave_publica_mercado_pago
MERCADO_PAGO_WEBHOOK_SECRET=sua_chave_webhook_mercado_pago
MERCADO_PAGO_NOTIFICATION_URL=https://seudominio.com.br/api/payment/webhook

# PIX
PIX_KEY=sua_chave_pix_aqui

# ========================================
# CLOUD STORAGE
# ========================================

# Cloudinary
CLOUDINARY_CLOUD_NAME=seu_cloud_name
CLOUDINARY_API_KEY=sua_api_key
CLOUDINARY_API_SECRET=sua_api_secret

# AWS S3 (Opcional)
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=streamvault-brasil

# ========================================
# EMAIL
# ========================================

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@streamvault.com.br
SMTP_PASS=sua_senha_email

# SendGrid (Alternativa)
SENDGRID_API_KEY=sua_chave_sendgrid

# ========================================
# OAUTH SOCIAL
# ========================================

# Google
GOOGLE_CLIENT_ID=seu_google_client_id
GOOGLE_CLIENT_SECRET=seu_google_client_secret

# Facebook
FACEBOOK_APP_ID=seu_facebook_app_id
FACEBOOK_APP_SECRET=seu_facebook_app_secret

# Firebase (Para notificações)
FIREBASE_PROJECT_ID=streamvault-brasil
FIREBASE_PRIVATE_KEY=sua_private_key_firebase
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@streamvault-brasil.iam.gserviceaccount.com

# ========================================
# RATE LIMITING
# ========================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ========================================
# CORS
# ========================================

CORS_ORIGIN=http://localhost:3001,https://streamvault.com.br
CORS_CREDENTIALS=true

# ========================================
# LOGS E MONITORAMENTO
# ========================================

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Sentry (Monitoramento de erros)
SENTRY_DSN=sua_dsn_sentry

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXXX

# ========================================
# RECURSOS ESPECÍFICOS
# ========================================

# Timezone brasileiro
TIMEZONE=America/Sao_Paulo
LOCALE=pt-BR
CURRENCY=BRL

# Administradores
ADMIN_EMAILS=admin@streamvault.com.br,suporte@streamvault.com.br

# Recursos da plataforma
ENABLE_CRON=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# Limites de upload
MAX_FILE_SIZE=100mb
MAX_FILES_PER_UPLOAD=10

# ========================================
# DESENVOLVIMENTO
# ========================================

# Debug
DEBUG=streamvault:*
VERBOSE_LOGGING=false

# Hot reload
HOT_RELOAD=true

# ========================================
# PRODUÇÃO
# ========================================

# SSL
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Cluster
CLUSTER_WORKERS=auto

# PM2
PM2_APP_NAME=streamvault-brasil
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster

# ========================================
# BACKUP
# ========================================

# Backup automático
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=streamvault-backups

# ========================================
# CDN E STREAMING
# ========================================

# URLs de vídeo (produção)
VIDEO_CDN_URL=https://videos.streamvault.com.br
SUBTITLE_CDN_URL=https://subtitles.streamvault.com.br

# Qualidades de vídeo
SUPPORTED_QUALITIES=480p,720p,1080p,4k
DEFAULT_QUALITY=720p

# HLS
HLS_SEGMENT_DURATION=10
HLS_PLAYLIST_TYPE=vod

# ========================================
# CACHE
# ========================================

# Cache TTL (em segundos)
CACHE_TTL_SHORT=300      # 5 minutos
CACHE_TTL_MEDIUM=3600    # 1 hora
CACHE_TTL_LONG=86400     # 24 horas

# ========================================
# WEBHOOKS
# ========================================

# Webhook URLs
WEBHOOK_PAYMENT_SUCCESS=https://seudominio.com.br/webhook/payment/success
WEBHOOK_PAYMENT_FAILED=https://seudominio.com.br/webhook/payment/failed
WEBHOOK_USER_REGISTERED=https://seudominio.com.br/webhook/user/registered

# ========================================
# FEATURE FLAGS
# ========================================

# Recursos opcionais
FEATURE_SOCIAL_LOGIN=true
FEATURE_MOBILE_APP=true
FEATURE_TV_APP=true
FEATURE_DOWNLOADS=true
FEATURE_RECOMMENDATIONS=true
FEATURE_ANALYTICS=true
FEATURE_A_B_TESTING=false

# ========================================
# LIMITES E QUOTAS
# ========================================

# Limites por usuário
MAX_CONCURRENT_STREAMS=4
MAX_DOWNLOAD_PER_MONTH=50
MAX_PROFILES_PER_ACCOUNT=6

# Limites do sistema
MAX_CATALOG_SIZE=100000
MAX_CONCURRENT_USERS=10000

# ========================================
# NOTIFICAÇÕES
# ========================================

# Push notifications
FCM_SERVER_KEY=sua_chave_fcm
APNS_KEY_ID=sua_key_id_apns
APNS_TEAM_ID=seu_team_id_apns

# ========================================
# INTEGRAÇÃO COM TERCEIROS
# ========================================

# Outros serviços
RECAPTCHA_SECRET_KEY=sua_chave_recaptcha
ZENDESK_API_KEY=sua_chave_zendesk
MIXPANEL_TOKEN=seu_token_mixpanel

