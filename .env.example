# Configuração do Servidor
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Configuração do Banco de Dados
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/streamvault?retryWrites=true&w=majority
MONGODB_TEST_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/streamvault_test?retryWrites=true&w=majority

# Configuração JWT
JWT_ACCESS_SECRET=sua-chave-super-secreta-de-acesso-aqui
JWT_REFRESH_SECRET=sua-chave-super-secreta-de-refresh-aqui
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Configuração Firebase
FIREBASE_PROJECT_ID=seu-projeto-firebase-id
FIREBASE_PRIVATE_KEY_ID=sua-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSua Chave Privada Firebase\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=seu-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Configuração OAuth
GOOGLE_CLIENT_ID=seu-google-oauth-client-id
GOOGLE_CLIENT_SECRET=seu-google-oauth-client-secret
FACEBOOK_APP_ID=seu-facebook-app-id
FACEBOOK_APP_SECRET=seu-facebook-app-secret

# Configuração Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=seu_access_token_mercado_pago
MERCADO_PAGO_PUBLIC_KEY=sua_public_key_mercado_pago
MERCADO_PAGO_WEBHOOK_SECRET=seu_webhook_secret_mercado_pago
MERCADO_PAGO_NOTIFICATION_URL=https://sua-app.com/api/pagamentos/webhook

# Configuração Cloudinary (para armazenamento de imagem/vídeo)
CLOUDINARY_CLOUD_NAME=seu-cloudinary-cloud-name
CLOUDINARY_API_KEY=sua-cloudinary-api-key
CLOUDINARY_API_SECRET=seu-cloudinary-api-secret

# Configuração Redis (para cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=sua-redis-senha

# Configuração de Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# APIs Externas
TMDB_API_KEY=sua-tmdb-api-key
OMDB_API_KEY=sua-omdb-api-key

# Segurança
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuração CORS
CORS_ORIGIN=http://localhost:3001,https://streamvault.com.br
CORS_CREDENTIALS=true

# Upload de Arquivos
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Desenvolvimento
DEBUG=streamvault:*

# URLs de Produção (atualizar ao fazer deploy)
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000
MOBILE_DEEP_LINK_URL=streamvault://

# Fontes de Conteúdo (para agregação)
NETFLIX_API_URL=https://api.netflix.com
PRIME_API_URL=https://api.primevideo.com
DISNEY_API_URL=https://api.disneyplus.com

# Configuração CDN
CDN_URL=https://cdn.streamvault.com.br

# Monitoramento
SENTRY_DSN=https://seu-sentry-dsn@sentry.io/project-id

# Webhooks
WEBHOOK_SECRET=seu-webhook-secret-para-servicos-externos

# Configurações Brasileiras
TIMEZONE=America/Sao_Paulo
LOCALE=pt-BR
CURRENCY=BRL

# Emails de Administradores
ADMIN_EMAILS=admin@streamvault.com.br,suporte@streamvault.com.br